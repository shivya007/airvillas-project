<% layout("/layouts/boilerplate") %>
<h1>Create a new Listing</h1>
<br><br>
<div class="row mt-3">
    <div class="col-8 offset-2 form-container">
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title: </label>
                <input type="text" name="listing[title]" placeholder="Villa/Restaurant name" class="form-control" required>
                <div class="valid-feedback">Good to go</div>
                <div class="invalid-feedback">Title required</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description: </label>
                <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                <div class="valid-feedback">Good to go</div>
                <div class="invalid-feedback">Description required</div>
            </div>


            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image </label>
                <input type="file" name="listing[image]" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Choose Category:</label>
                <div id="category" style="padding: 10px; background-color: #f9f9f9; border: 1px solid #ccc; border-radius: 8px;">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Beachfront" id="categoryBeachfront">
                    <label class="form-check-label" for="categoryBeachfront">Beachfront</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Cabins" id="categoryCabins">
                    <label class="form-check-label" for="categoryCabins">Cabins</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Omg" id="categoryOmg">
                    <label class="form-check-label" for="categoryOmg">Omg</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Lake" id="categoryLake">
                    <label class="form-check-label" for="categoryLake">Lake</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Design" id="categoryDesign">
                    <label class="form-check-label" for="categoryDesign">Design</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Amazing Pools" id="categoryAmazingPools">
                    <label class="form-check-label" for="categoryAmazingPools">Amazing Pools</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Farms" id="categoryFarms">
                    <label class="form-check-label" for="categoryFarms">Farms</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Amazing Views" id="categoryAmazingViews">
                    <label class="form-check-label" for="categoryAmazingViews">Amazing Views</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Rooms" id="categoryRooms">
                    <label class="form-check-label" for="categoryRooms">Rooms</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Lakefront" id="categoryLakefront">
                    <label class="form-check-label" for="categoryLakefront">Lakefront</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Tiny Homes" id="categoryTinyHomes">
                    <label class="form-check-label" for="categoryTinyHomes">Tiny Homes</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Countryside" id="categoryCountryside">
                    <label class="form-check-label" for="categoryCountryside">Countryside</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Treehouse" id="categoryTreehouse">
                    <label class="form-check-label" for="categoryTreehouse">Treehouse</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Trending" id="categoryTrending">
                    <label class="form-check-label" for="categoryTrending">Trending</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Tropical" id="categoryTropical">
                    <label class="form-check-label" for="categoryTropical">Tropical</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="National Parks" id="categoryNationalParks">
                    <label class="form-check-label" for="categoryNationalParks">National Parks</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Casties" id="categoryCasties">
                    <label class="form-check-label" for="categoryCasties">Casties</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Camping" id="categoryCamping">
                    <label class="form-check-label" for="categoryCamping">Camping</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Top Of The World" id="categoryTopOfTheWorld">
                    <label class="form-check-label" for="categoryTopOfTheWorld">Top Of The World</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Luxe" id="categoryLuxe">
                    <label class="form-check-label" for="categoryLuxe">Luxe</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Iconic Cities" id="categoryIconicCities">
                    <label class="form-check-label" for="categoryIconicCities">Iconic Cities</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="listing[category]" value="Earth Homes" id="categoryEarthHomes">
                    <label class="form-check-label" for="categoryEarthHomes">Earth Homes</label>
                  </div>
                </div>
              </div>
              
            <div class="mb-3">
                <label for="price" class="form-label">Price: </label>
                <input name="listing[price]" placeholder="3000" class="form-control" required>
                <div class="valid-feedback">Good to go</div>
                <div class="invalid-feedback">Price required</div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="country" class="form-label">Country: </label>
                    <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                    <div class="valid-feedback">Good to go</div>
                    <div class="invalid-feedback">Country name required</div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location: </label>
                    <input type="text" name="listing[location]" placeholder="Goa" class="form-control" required>
                    <div class="valid-feedback">Good to go</div>
                    <div class="invalid-feedback">Location required</div>
                </div>
            </div>

            <button class="btn btn-dark add-btn mt-3">Add</button>
            <br><br>
        </form>
    </div>
</div>
